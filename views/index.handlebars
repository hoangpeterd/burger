<div class="container main">
  <div class="row">
    <div class="col-sm-6 leftCol">
      <h3>uneaten</h3>

      <!-- uneaten burgers -->
      <ul style="list-style: none;">
      {{#each burgerList}}
        {{#if this.devoured}}
        {{else}}
          <li>
            <div class="row">
              <div class="col-sm-9">
                <span class="left notDevour">
                  {{this.burger_name}}
                </span>
              </div>

              <div class="col-sm-3">
                  <form action="/?_method=PUT" method="POST">
                    <input type="hidden" name="id" value="{{this.id}}">
                    <button type="submit">devour!</button>
                  </form>
              </div>
            </div>
          <li>
      {{/if}}
      {{/each}}
      </ul>
    </div>


    <div class="col-sm-6 rightCol">
      <h3>eaten</h3>

      <!-- devoured burgers -->
      <ul style="list-style: none;">
      {{#each burgerList}}
        {{#if this.devoured}}
          <li>
            <span>
              {{this.burger_name}}
            </span>
          </li>
        {{/if}}
      {{/each}}
      </ul>
    </div>
  </div>
</div>
